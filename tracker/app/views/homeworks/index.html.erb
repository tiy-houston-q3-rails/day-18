<h1 class="text-center">Sean's Homework</h1>
<%= link_to 'New Homework', new_homework_path, class:"btn btn-info" %>
<table class="table table-hover">

  <thead>
    <tr>
      <th>Day</th>
      <th>Assignment</th>
      <th>On time</th>
      <th>Grade</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.day %></td>
        <td><%= homework.assignment %></td>
        <td><%= homework.on_time %></td>
        <td><%= homework.grade %></td>
        <td>
          <%= link_to homework.github_url do %>
            <%= image_tag homework.icon, class: "icon" %>
          <% end %>
        </td>

        <td><%= link_to 'Show', homework, class: "btn btn-large btn-success" %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', homework, class: 'btn btn-danger', method: :delete, data: { confirm: "Don't taze me bro!" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

